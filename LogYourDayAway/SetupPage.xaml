<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:LogYourDayAway.ViewModel"
             x:Class="LogYourDayAway.SetupPage"
             Title="SetupPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Create Your Journal"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}" />

            <Label Text="Your data is stored locally on this device."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20" />

            <Label Text="What should we call you?" FontSize="14" TextColor="Gray"/>
            <Entry Placeholder="e.g. Jeff"
                   Text="{Binding Username}"
                   HeightRequest="50"
                   BackgroundColor="#F5F5F5" />

            <Label Text="Create a Password" FontSize="14" TextColor="Gray" Margin="0,10,0,0"/>
            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"
                   HeightRequest="50"
                   BackgroundColor="#F5F5F5" />

            <Entry Placeholder="Confirm Password"
                   Text="{Binding ConfirmPassword}"
                   IsPassword="True"
                   HeightRequest="50"
                   BackgroundColor="#F5F5F5" />

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" 
                   HorizontalOptions="Center">
                <Label.Triggers>
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding ErrorMessage}"
                                 Value="">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <Button Text="Start Journaling"
                    Command="{Binding CreateJournalCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HeightRequest="55"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>